icount=$( ping -c 1 $target | grep icmp* | wc -l ) > /dev/null 2>&1
if [[ $icount -eq 0 ]] ; then
    #inform user that net was not found
    NETWORK_STATUS="UNAVAILABLE"
else
    NETWORK_STATUS=$MY_IP
fi

}

